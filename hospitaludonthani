# learn-github

from pyzbar.pyzbar import decode
import cv2
import numpy as np
import random
from paho.mqtt import client as mqtt_client
import RPi.GPIO as GPIO  
import time
import sys  # เพิ่ม import สำหรับใช้ sys.exit()

relay_gpio_pin = 18
GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)  
GPIO.setup(relay_gpio_pin, GPIO.OUT)
GPIO.output(relay_gpio_pin, GPIO.LOW)

broker = '147.50.227.85'
port = 1883
topic = "QRcode/mqtt"
client_id = f'publish-{random.randint(0, 1000)}'
username = 'atrd'
password = 'P@ssrd'

def connect_mqtt():
    def on_connect(client, userdata, flags, rc):
        if rc == 0:
            print("Connected to MQTT Broker!")
        else:
            print(f"Failed to connect, return code {rc}")

    client = mqtt_client.Client(client_id)
    client.username_pw_set(username, password)
    client.on_connect = on_connect
    client.connect(broker, port)
    return client

def run():
    client = connect_mqtt()
    client.loop_start()

    cap = cv2.VideoCapture(0)

    # ตรวจสอบว่าการเปิดกล้องสำเร็จหรือไม่
    if not cap.isOpened():
        print("Error: Could not open camera.")
        GPIO.cleanup()
        sys.exit()

    cap.set(3, 640)
    cap.set(4, 480)

    relay_is_on = False  

    while True:
        success, img = cap.read()
        qr_codes = decode(img)
        
        if qr_codes:
            # พบ QR code
            for barcode in qr_codes:
                myData = barcode.data.decode('utf-8')
                print(myData, flush=True)
                
                pts = np.array([barcode.polygon], np.int32)
                pts = pts.reshape((-1, 1, 2))
                cv2.polylines(img, [pts], True, (255, 0, 255), 5)
                
                pts2 = barcode.rect
                cv2.putText(img, myData, (pts2[0], pts2[1]), cv2.FONT_HERSHEY_SIMPLEX, 0.9, (255, 165, 0), 2)

                if not relay_is_on:
                    GPIO.output(relay_gpio_pin, GPIO.HIGH)
                    print("Relay is ON")
                    relay_is_on = True
                    time.sleep(5)  
            else:
                # ไม่พบ QR code
                if  relay_is_on:
                    GPIO.output(relay_gpio_pin, GPIO.LOW)
                    print("Relay is OFF")
                    relay_is_on = False
                    time.sleep(5)  

            # ส่งข้อมูลที่ได้จาก QR code ไปยัง MQTT Broker
            for barcode in qr_codes:
                myData = barcode.data.decode('utf-8')
                client.publish(topic, myData)
                print(f"QRcode: {myData}")

        cv2.imshow('Scan QR Code - https://laptrinhvb.net', img)
        if cv2.waitKey(1) == ord('q'):
            break
    
    GPIO.output(relay_gpio_pin, GPIO.LOW)
    GPIO.cleanup()

    cap.release()
    cv2.destroyAllWindows()

    client.loop_stop()
    client.disconnect()

if __name__ == '__main__':
    run()
